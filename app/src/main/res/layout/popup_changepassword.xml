<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_element_course_plan_course"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_color2"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="25dp"
        android:background="@drawable/change_pw"
        android:gravity="center|top"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/change_dialog"
            android:layout_marginTop="@dimen/_55sdp"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/security_reson"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_10sdp"
            android:layout_height="wrap_content">
        </TextView>

        <Button
            android:id="@+id/ok"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/login_botton_border"
            android:text="Change"
            android:textColor="@color/title_color" />

        <TextView
            android:layout_width="wrap_content"
            android:text="Skip"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_10sdp"
            android:layout_height="wrap_content">
        </TextView>

    </LinearLayout>

</LinearLayout>


