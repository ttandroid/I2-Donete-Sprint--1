<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="0dp"
        tools:ignore="MissingConstraints">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingtoolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            android:fitsSystemWindows="true"
            app:contentScrim="@android:color/transparent"
            app:elevation="0dp"
            app:expandedTitleTextAppearance="@android:color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <!-- <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">-->
            <RelativeLayout
                android:id="@+id/search_relativelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_45sdp">

                <LinearLayout
                    android:id="@+id/linear1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:id="@+id/titleTextView"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/browse_united_state"
                        android:textAllCaps="true"
                        android:textSize="@dimen/_20sdp"
                        android:textColor="@color/title_color"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/search_location_layout"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@drawable/search_border"
                        android:orientation="horizontal"
                        android:padding="@dimen/_7sdp">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_10sdp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight=".1"
                            android:src="@drawable/search_icon" />

                        <EditText
                            android:id="@+id/search_us_et"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:editable="true"
                            android:gravity="center_vertical"
                            android:hint="@string/united_state_location"
                            android:textColor="@color/trans_black"
                            android:textColorHint="@color/colorPrimary" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:layout_weight=".1"
                            android:src="@drawable/close"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:id="@+id/namesearchLayout"
                       
                        android:background="@drawable/search_border"
                        android:orientation="horizontal"
                        android:padding="@dimen/_7sdp">

                        <ImageView
                            android:id="@+id/search_icon"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_10sdp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight=".1"
                            android:src="@drawable/search_icon" />

                        <EditText
                            android:id="@+id/search_name_et1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:imeOptions="actionDone"
                            android:background="@null"
                            android:editable="true"
                            android:gravity="center_vertical"
                            android:hint="@string/united_state_search_name"
                            android:textColor="@color/trans_black"
                            android:textColorHint="@color/colorPrimary" />

                        <ImageView
                            android:id="@+id/close_img"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:layout_weight=".1"
                            android:src="@drawable/close"
                            />
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:layout_marginTop="10dp"
                        android:textSize="@dimen/_10sdp"
                        android:text="Type at least 3 letters to search."

                        />
                    <LinearLayout
                        android:id="@+id/filter_linear_layout1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1.3"
                            android:text="@string/united_state_filter"
                            android:textColor="@color/title_color"
                            android:textSize="@dimen/_10sdp" />

                        <LinearLayout
                            android:id="@+id/name_search_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight=".2"
                                android:src="@drawable/name_icon" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight=".3"
                                android:textSize="@dimen/_10sdp"
                                android:layout_marginLeft="@dimen/_2sdp"
                                android:layout_height="wrap_content"
                                android:text="@string/united_state_name"
                                android:textColor="@color/colorAccent"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/locationtitle_search_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2.5"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                           >

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_gravity="center"
                                android:layout_weight=".5"
                                android:src="@drawable/usa_icon" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_1sdp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="Location"
                                android:textColor="@color/colorAccent"
                                android:textSize="@dimen/_10sdp" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/type_linear_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_weight="2.2"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_2sdp"
                                android:layout_weight="1"
                                android:src="@drawable/type_icon" />


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:layout_weight="2"
                                android:text="@string/united_state_type"
                                android:textColor="@color/colorAccent"
                                android:textSize="@dimen/_10sdp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/advance_search_text"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_gravity="center"
                            android:layout_weight="3.5"
                            android:background="@drawable/login_botton_border"
                            android:gravity="center"
                            android:text="@string/united_state_search"
                            android:textColor="@color/title_color"
                            android:textSize="@dimen/_10sdp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/title_tv1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:text="@string/united_state_nonprofit"
                       android:textSize="@dimen/_14sdp"
                        android:textColor="@color/title_color"/>

                    <LinearLayout
                        android:id="@+id/linear_tool_test"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                       >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp" />
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:contentInsetStart="0dp"
                android:background="@drawable/toolbarbg"
                android:contentInsetLeft="0dp"
                android:contentInsetEnd="0dp"
                android:contentInsetRight="0dp"
                android:elevation="0dp"
                app:contentInsetEnd="0dp"
                app:contentInsetStart="0dp"
                app:elevation="0dp"
                app:layout_collapseMode="pin">

                <RelativeLayout
                    android:id="@+id/relative_before_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                   >


                    <ImageView
                        android:id="@+id/back_icon_name_img"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|left"
                        android:padding="8dp"
                        android:src="@drawable/back_icon" />
                    <!-- <TextView
                         android:id="@+id/commonMenuActivityTitleTextView"
                         android:layout_width="wrap_content"
                         android:layout_height="match_parent"
                         android:layout_marginLeft="@dimen/contentSizeNormal"
                         android:layout_marginRight="@dimen/contentSizeNormal"
                         android:gravity="center"
                         android:maxLines="2"
                         android:text="demo"
                         android:textColor="@color/title_text_color"
                         android:textSize="@dimen/contentSizeNormal"
                         android:textStyle="bold"
                         android:typeface="serif" />-->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_18sdp"
                        android:src="@drawable/toplogo" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/relative_toolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/back_icon_img1"
                            android:layout_width="45dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="8dp"
                            android:src="@drawable/back_icon" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:id="@+id/location_search_layout"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_toRightOf="@+id/back_icon_img1"
                            android:layout_weight="1"
                            android:background="@drawable/search_border"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="@dimen/_7sdp">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_weight=".1"
                                android:src="@drawable/search_icon" />

                            <EditText
                                android:id="@+id/search_us_et1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/_2sdp"
                                android:layout_weight="1"
                                android:background="@null"
                                android:editable="true"
                                android:gravity="center_vertical"
                                android:hint="@string/united_state_location"
                                android:textColor="@color/trans_black"
                                android:textColorHint="@color/colorPrimary" />


                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_marginLeft="@dimen/_2sdp"
                                android:layout_weight=".15"
                                android:src="@drawable/close"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:id="@+id/name_search_head_layout"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                           
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_toRightOf="@+id/back_icon_img1"
                            android:layout_weight="1"
                            android:background="@drawable/search_border"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="@dimen/_7sdp">

                            <ImageView
                                android:id="@+id/search_icon1"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_weight=".1"
                                android:src="@drawable/search_icon" />

                            <EditText
                                android:id="@+id/search_na_et1"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:background="@null"
                                android:imeOptions="actionDone"
                                android:editable="true"
                                android:singleLine="true"
                                android:gravity="center_vertical"
                                android:hint="@string/united_state_search_name"
                                android:textColor="@color/trans_black"
                                android:textColorHint="@color/colorPrimary" />


                            <ImageView
                                android:id="@+id/close_img1"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_marginLeft="@dimen/_2sdp"
                                android:layout_weight=".15"
                                android:src="@drawable/close"
                                />
                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_12sdp"
                            android:layout_marginRight="@dimen/_12sdp"
                            android:layout_marginTop="10dp"
                            android:textSize="@dimen/_10sdp"
                            android:text="Type at least 3 letters to search."

                            />
                        <ImageView
                            android:id="@+id/filter_show_img"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight=".1"
                            android:src="@drawable/ic_filter" />
                    </LinearLayout>


                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>


            <!-- </RelativeLayout>-->
        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <LinearLayout
            android:id="@+id/linear_search1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
           >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.3"
                android:text="@string/united_state_filter"
                android:textColor="@color/title_color"
                android:textSize="@dimen/_10sdp" />
            <LinearLayout
                android:id="@+id/name_search_layout1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_1sdp"
                android:layout_weight="2.2"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight=".2"
                    android:src="@drawable/name_icon" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".3"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_height="wrap_content"
                    android:text="@string/united_state_name"
                    android:textColor="@color/colorAccent"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/locationtitle_search_layout1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2.5"
                android:gravity="center_vertical"
                android:orientation="horizontal"
               >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="center"
                    android:layout_weight=".5"
                    android:src="@drawable/usa_icon" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Location"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/type_linear_layout1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_1sdp"
                android:layout_weight="2.2"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_weight=".4"
                    android:src="@drawable/type_icon" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_weight="2"
                    android:text="@string/united_state_type"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>

            <TextView
                android:id="@+id/advance_search_text1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:layout_weight="3.5"
                android:background="@drawable/login_botton_border"
                android:gravity="center"
                android:text="@string/united_state_search"
                android:textColor="@color/title_color"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedscrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:clipToPadding="false"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmer_view_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <!-- Adding 3 rows of placeholders -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include layout="@layout/recipe_placeholder_item" />

                    <include layout="@layout/recipe_placeholder_item" />

                    <include layout="@layout/recipe_placeholder_item" />

                </LinearLayout>

            </com.facebook.shimmer.ShimmerFrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/united_state_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layoutAnimation="@anim/layout_animation_fall_down"
                android:nestedScrollingEnabled="false"
                />
            <LinearLayout
                android:id="@+id/no_data_linear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:orientation="vertical"
               >

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_75sdp"
                    android:src="@drawable/ic_noresult" />

                <TextView
                    android:id="@+id/no_data_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/name_search_noresult"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>